
@model restapp.Models.User

@{
    ViewData["Title"] = "Register";
    // NOTE: You are using _LayoutAdmin.cshtml, which might be confusing for a public registration page.
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container d-flex justify-content-center align-items-center mt-5" style="min-height: 80vh;">
    <div style="width: 700px;">
        <h2 class="text-center mb-4" style="font-family: 'Segoe UI', cursive;">User Registration</h2>

        <form asp-action="RegisterUser" asp-controller="User" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <!-- Last Name -->
                <div class="col-md-6">
                    <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- Username -->
                <div class="col-md-6">
                    <input asp-for="UserId" class="form-control" placeholder="Enter Username" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Mobile -->
                <div class="col-md-6">
                    <input asp-for="Mobile" class="form-control" placeholder="Enter Mobile Number" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="col-md-6">
                    <input asp-for="Password" class="form-control" placeholder="Enter Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6 d-flex align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Status" />
                        <label class="form-check-label">@Html.DisplayNameFor(model => model.Status)</label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center align-items-center mt-4 gap-3">
                <button type="submit" class="btn btn-success px-4">Register</button>
            </div>
            <p class="text-center mt-3">
                Already have an account? <a asp-action="Login" asp-controller="User">Login here</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}