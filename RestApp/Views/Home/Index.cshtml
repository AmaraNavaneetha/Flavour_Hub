@using restapp.Services
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <!-- Slider Section -->
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
               
                <div class="carousel-caption d-none d-md-block">
                    <h5>Flavour Hub</h5>
                    <p>Diwali Feast</p>
                </div>
            </div>
            <!-- Add more carousel-item blocks for additional slides -->
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>

    <!-- About Section -->
    <div class="bestseller-section">
        <h2>Bestsellers</h2>
        <div class="bestseller-items">
            <!-- Repeat this block for each bestseller item -->
            <div class="bestseller-item">
                path-to-image.jpg
                <h3>Product Name</h3>
                <p>Bestseller</p>
            </div>
        </div>
    </div>


    <!-- About Section -->
    <section id="about" class="info-section mt-5">
        <h2 class="section-title">About Us</h2>
        <p>
            Welcome to <strong>Flavour Hub</strong>! We specialize in authentic flavors and
            a delightful dining experience. Our mission is to bring traditional recipes to your table
            with a modern twist.
        </p>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="info-section mt-4">
        <h2 class="section-title">Contact Us</h2>
        <p>Email: <a href="mailto:info@flavourhub.com">info@flavourhub.com</a></p>
        Phone: +91 98765 43210</p>
        <p>Address: 123, Food Street, Chennai, TN</p>

    <!-- Social Media Icons -->

        
<div class="social-icons mt-3">
            <a href="https://instagram.com" target="_blank" class="me-3"><i class="bi bi-instagram"></i></a>
            
</div>



        
    </section>

</div>
 