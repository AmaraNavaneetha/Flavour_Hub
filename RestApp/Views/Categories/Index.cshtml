@using restapp.Dal
@model PaginatedList<restapp.Models.Category>

@{
    ViewData["Title"] = "Category Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@* --- 1. Header Section with Light Colors --- *@
<div class="p-4 rounded-3 shadow-sm mb-4" style="background-color: #e6f7ff; border-left: 5px solid #00aaff;">
    <h1 class="text-dark"><i class="bi bi-tags-fill text-info me-2"></i> Category Management</h1>
    <p class="lead" style="color: #4a4a4a;">Manage food categories, status, and promotions.</p>
</div>
<hr />

@* --- 2. Search, Create, and Filter Bar --- *@
<div class="row mb-4 align-items-center">
    <div class="col-md-4">
        <a asp-action="Create" class="btn text-white fw-bold" style="background-color: #00796B;">
            <i class="bi bi-plus-circle-fill me-1"></i> Create New Category
        </a>
    </div>
    <div class="col-md-8">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Find by Category Name" />
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i> Clear Filter
                </a>
            </div>
        </form>
    </div>
</div>

@* --- 3. Interactive Table with Status Toggle --- *@
<div class="table-responsive">
    <table class="table table-hover table-striped border shadow-sm">
        <thead style="background-color: #f0f0f0;">
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" style="color: #333; text-decoration: none;">
                        Category Name
                        <i class="bi bi-sort-alpha-down-alt ms-1"></i>
                    </a>
                </th>
                <th style="color: #333;">Description</th>
                <th style="color: #333;">Image</th>
                <th style="color: #333;">Status</th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DiscountSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" style="color: #333; text-decoration: none;">
                        Discount (%)
                        <i class="bi bi-sort-numeric-down-alt ms-1"></i>
                    </a>
                </th>
                <th style="color: #333;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CategoryDescription)</td>
                    <td>
                        @* Improved Image Display *@
                        <img src="@Url.Content(item.CategoryImagePath)"
                             alt="@item.CategoryName"
                             class="img-thumbnail"
                             style="width: 150px; height: 75px; object-fit: cover;" />
                    </td>
                    <td>
                        @* --- Status Display (Interactive Colors) --- *@
                        @if (item.CategoryStatus)
                        {
                            <span class="badge p-2" style="background-color: #ccffcc; color: #006600;">
                                <i class="bi bi-check-circle-fill me-1"></i> ACTIVE
                            </span>
                        }
                        else
                        {
                            <span class="badge p-2" style="background-color: #ffcccc; color: #cc0000;">
                                <i class="bi bi-x-octagon-fill me-1"></i> INACTIVE
                            </span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryDiscount)%
                    </td>
                    <td>
                        @* --- Action Buttons --- *@
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-primary me-1"><i class="bi bi-pencil-fill"></i> Edit</a>
                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-sm btn-info me-1"><i class="bi bi-info-circle-fill"></i> Details</a>

                        @* --- Toggle Status Form --- *@
                        <form asp-action="ToggleCategoryStatus" asp-route-id="@item.CategoryId" method="post" style="display:inline;">
                            @{
                                // Deactivate (Orange/Warning) / Activate (Green/Success)
                                var actionColor = item.CategoryStatus ? "#ff9800" : "#4caf50";
                                var actionText = item.CategoryStatus ? "Deactivate" : "Activate";
                            }
                            <button type="submit"
                                    class="btn btn-sm text-white"
                                    style="background-color: @actionColor;"
                                    onclick="return confirm('Confirm: Are you sure you want to @actionText category @item.CategoryName?');">
                                @actionText
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* --- 4. Pagination Links (Updated Styles) --- *@
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="d-flex justify-content-between mt-3">
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-outline-secondary @prevDisabled">
        <i class="bi bi-chevron-left"></i> Previous Page
    </a>

    <span class="align-self-center text-muted">Page @(Model.PageIndex) of @(Model.TotalPages)</span>

    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-outline-secondary @nextDisabled">
        Next Page <i class="bi bi-chevron-right"></i>
    </a>
</div>