<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/restapp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
    @* Using navbar-expand-lg for better spacing on admin dashboard before collapsing *@
    <nav class="navbar navbar-expand-lg navbar-light border-bottom box-shadow mb-3">
        
        @* Use ONE main container to wrap the entire nav content *@
        <div class="container-fluid"> 
            
            @* COMBINED BRAND AND LOGO: Everything in one anchor tag *@
            <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">
                @* Logo image (Adjust the path if needed) *@
                <img src="~/images/Logo/logo.png" alt="Flavour Hub Logo" style="height: 35px; margin-right: 10px; vertical-align: middle;" />
                Flavour Hub
            </a>
            
            @* Toggler button for mobile view *@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbarContent"
                    aria-controls="adminNavbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            @* Navigation links container *@
            <div class="collapse navbar-collapse" id="adminNavbarContent">
                
                @* Links on the LEFT/Center: Added 'me-auto' to push the next list (Logout) to the right *@
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">    
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="UserManager" asp-action="Index">User Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Sliders" asp-action="Index">Sliders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="FoodItems" asp-action="Index">FoodItems</a>
                    </li>
                </ul>

                @* Links on the RIGHT: Logout *@
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
            
        </div>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
   
    <footer class="border-top footer bg-dark-blue navbar-dark">
    <div class="container">
        <span class="text-white">&copy; 2025 - restapp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>